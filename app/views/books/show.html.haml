.row
  .col-md-4
    = image_tag @book.book_img.url(:book_show), class: "book-show"
  .col-md-8
    .book-info
      %h2.book-title= @book.title
      %h3.book-author
        %span by
        = @book.author
      %p= @book.description
      = link_to "Back", root_path, class: "btn btn-custom"
      = link_to "Download", @book.book_file.url, class: "btn btn-custom"
      - if user_signed_in?
        - if @book.user_id == current_user.id
          = link_to "Edit", edit_book_path(@book), class: "btn btn-custom"
          = link_to "Delete", book_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-custom"
          
